{
  "name": "winder-logbook-gradle",
  "version": "1.0.0",
  "description": "Winder Logbook - Native Android app with Gradle build",
  "main": "index.js",
  "scripts": {
    "android": "gradlew clean assembleRelease && adb install -r app\\build\\outputs\\apk\\release\\app-release.apk",
    "build": "gradlew clean assembleRelease",
    "build-debug": "gradlew clean assembleDebug",
    "install": "adb install -r app\\build\\outputs\\apk\\release\\app-release.apk",
    "install-debug": "adb install -r app\\build\\outputs\\apk\\debug\\app-debug.apk",
    "uninstall": "adb uninstall com.winderlogbook.gradle",
    "devices": "adb devices",
    "logs": "adb logcat | findstr Winder",
    "clean": "gradlew clean",
    "bundle": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "distribute": "gradlew clean assembleRelease && echo APK ready for distribution at: app\\build\\outputs\\apk\\release\\app-release.apk"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "babel-loader": "^9.1.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "typescript": "^5.2.0",
    "@types/react": "^18.2.0",
    "ts-loader": "^9.5.0"
  },
  "keywords": ["mining", "winder", "logbook", "android", "gradle"],
  "author": "Winder Operations Team",
  "license": "MIT"
}
